#!/usr/bin/env node

/**
 * Module dependencies.
 */

var app = require('../server')
var debug = require('debug')('stow:server')
var http = require('http')
var colors = require('colors')

/**
 * Get port from environment and store in Express.
 */

var port = normalizePort(process.env.PORT || '3000')
app.set('port', port)

/**
 * Create HTTP server.
 */

var server = http.createServer(app)

/**
 * Listen on provided port, on all network interfaces.
 */

server.listen(port)
server.on('error', onError)
server.on('listening', onListening)

/**
 * Normalize a port into a number, string, or false.
 */

function normalizePort(val) {
  var port = parseInt(val, 10)

  if (isNaN(port)) {
    // named pipe
    return val
  }

  if (port >= 0) {
    // port number
    return port
  }

  return false
}

/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
  if (error.syscall !== 'listen') {
    throw error
  }

  var bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges')
      process.exit(1)
      break
    case 'EADDRINUSE':
      console.error(bind + ' is already in use')
      process.exit(1)
      break
    default:
      throw error
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */

function onListening() {
  var addr = server.address()
  var bind = typeof addr === 'string'
    ? 'pipe ' + addr
    : 'port ' + addr.port
  debug('Listening on ' + bind)
  console.log(colors.green('\nServer listening on Port %s \n'), port)
  console.log('>>> Hey team. Just a friendly reminder that this is just the API server. You should also run "npm run dev" in a new tab and open the browser on localhost:8080. \n\n>>> If this is your first time running the server, don\'t forget to migrate and seed the database with "npm run database". \n'.bgCyan.black)
  console.log('>>> If you make any edits to files outside of the src folder, you will need to restart this server to see changes. The dev server will only live bundle the front-end files.'.bgRed.black)
  console.log('>>> "npm run database" will now run the following commands: knex migrate:rollback, knex:migrate latest and knex seed:run.\n'.bgYellow.black)
}
